# This page will be embedded as `{{ content }}` in the layout defined below

layout: default.twig
providers:
    all_projects:
        provider: RichElements
        folder: projects

---

<section id="introduction">

    <div id="circle"
         data-anchor-target="#portfolio"
         data--10p-bottom-top="transform: scale(1.0);"
         data--60p-bottom-top="transform: scale(0.0);"
         data-140p="transform: rotateX(0deg);"
         data-160p="transform: rotateX(180deg);"
         data-240p="transform: rotateX(180deg);"
         data-260p="transform: rotateX(0deg);"
    >
        <div id="circle_hello" class="circle_content"
                data-040p="opacity: 1.0;"
                data-060p="opacity: 0.0;"
        ></div>
        <div id="circle_i_m_art_director" class="circle_content"
                data-040p="opacity: 0.0;"
                data-060p="opacity: 1.0;"
                data-149p="opacity: 1.0;"
                data-151p="opacity: 0.0;"
        ></div>
        <div id="circle_yeah"
                data-070p="opacity: 0.0; top:  30px; right: -24px; transform: scale(0.2);"
                data-090p="opacity: 1.0; top: -32px; right: -96px; transform: scale(1.0);"
                data-149p="opacity: 1.0; top: -52px; right: -116px;"
                data-151p="opacity: 0.0;"
        ></div>
        <div id="circle_and" class="circle_content"
                data-149p="opacity: 0.0;"
                data-151p="opacity: 1.0;"
                data-249p="opacity: 1.0;"
                data-251p="opacity: 0.0;"
        ></div>
        <div id="circle_illustrator" class="circle_content"
                data-249p="opacity: 0.0;"
                data-251p="opacity: 1.0;"
                data-340p="opacity: 1.0;"
                data-360p="opacity: 0.0;"
        ></div>
        <div id="circle_pen_left"
                data-249p="opacity: 0.0;"
                data-251p="opacity: 1.0; transform: scale(1.0, 1.0);"
                data-300p="transform: scale(0.9, 1.1);"
                data-340p="opacity: 1.0; transform: scale(1.0, 1.0);"
                data-360p="opacity: 0.0;"
        ></div>
        <div id="circle_pen_right"
                data-249p="opacity: 0.0;"
                data-251p="opacity: 1.0; transform: scale(1.0, 1.0);"
                data-300p="transform: scale(1.1, 0.9);"
                data-340p="opacity: 1.0; transform: scale(1.0, 1.0);"
                data-360p="opacity: 0.0;"
        ></div>
        <div id="circle_that_s_my_work" class="circle_content"
                data-340p="opacity: 0.0;"
                data-360p="opacity: 1.0;"
        ></div>
    </div>

    <div class="row row01"
         data-000p="display: block;"
         data-100p="display: none;"
    ></div>
    <div class="row row02"
         data-000p="top: 100%; display: block;"
         data-100p="top: 0px;"
         data-200p="display: none;"
    ></div>
    <div class="row row03"
         data-100p="top: 100%; display: block;"
         data-200p="top: 0px;"
         data-300p="display: none;"
    ></div>
    <div class="row row04"
         data-200p="top: 100%; display: block;"
         data-300p="top: 0px;"
         data-400p="display: none;"
    ></div>
    <div class="row row05"
         data-300p="top:  100%; display: block;"
         data-400p="top:   0px;"
         data-500p="top: -1000%; display: none;"
    ></div>

    <div class="row space"></div>

</section>


{## SHOWCASE OF THE PROJECTS AS THUMBNAILS #}
<section id="portfolio">

{% for project in this.providers.all_projects %}

    <a id="thumbnail-{{ project.slug }}" href="#detail-{{ project.slug }}">
        <article
            data-0000-bottom-top="opacity: 0.0"
            data--300-bottom-top="opacity: 1.0;"
        >
            <figure>
                <img src="{{ project.thumbnail }}" alt="Thumbnail for {{ project.title }}">
                <figcaption>
                    <span class="title">{{ project.title }}</span>
                    <br>
                    <span class="client">- {{ project.client }} -</span>
                </figcaption>
            </figure>
        </article>
    </a>

{% endfor %}

</section>


{## DETAILS OF EACH PROJECT #}
<section id="details">

{% for project in this.providers.all_projects %}

    <div id="detail-{{ project.slug }}" class="detail">

        <div class="container">

            <h3>{{ project.title }}</h3>

            <div class="carousel">
                <div class="viewport">
                    <ul class="overview">
                        {% for image in project.images %}
                            <li><img src="{{ image }}" alt=""></li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="infos">
                    <a class="buttons link" href="{{ project.link }}" target="_blank">link</a>

                    <dl>
                        <dt>Mission</dt> : <dd>{{ project.mission }}</dd> <br>
                        <dt>Client</dt> : <dd>{{ project.client }}</dd> <br>
                        <dt>Agency</dt> : <dd>{{ project.agency }}</dd> <br>
                    </dl>
                </div>

                <hr>

                <a class="buttons exit" href="#"></a>

                <div class="nav">
                    <a class="buttons prev" href="#"></a>
                    <a class="buttons next" href="#"></a>
                </div>

            </div>

        </div>

    </div>

{% endfor %}

</section>


{## INFORMATION ABOUT HELLOPOYT #}
<section id="information">

    <div class="col_left">
        <img id="information_pola_back"  src="media/img/information/pola-back.png"  alt=""
             data-anchor-target="#information"
             data-00000-bottom-top="left: -600px; transform: rotateZ(-200deg);"
             data--0600-bottom-top="left:  000px; transform: rotateZ(0deg);"
             data-00000-top-bottom="left:  100px; transform: rotateZ(20deg);"
        >
        <img id="information_pola_front" src="media/img/information/pola-front.png" alt=""
             data-anchor-target="#information"
             data-00000-bottom-top="left: -600px; transform: rotateZ(-150deg);"
             data--0600-bottom-top="left:  160px; transform: rotateZ(0deg);"
             data-00000-top-bottom="left:  200px; transform: rotateZ(15deg);"
        >
    </div>

    <div class="col_right">
        <h2>Hellopoyt</h2>
        <p class="first">
            {{ this.hellopoyt.p1 }}
        </p>
        <p class="second">
            {{ this.hellopoyt.p2 }}
        </p>
    </div>

</section>


<hr class="clear">


{## CONTACT INFORMATION #}
<section id="contact">

    <h2>Contact</h2>
    <nav>
        <a id="contact_mail" href="{{ this.contact.mail }}">
            <img src="media/img/contact/btn-mail.png" alt="Mail">
            <span>mail</span>
        </a>
        <a id="contact_behance" href="{{ this.contact.behance }}">
            <img src="media/img/contact/btn-behance.png" alt="Behance">
            <span>behance</span>
        </a>
        <a id="contact_tumblr" href="{{ this.contact.tumblr }}">
            <img src="media/img/contact/btn-tumblr.png" alt="Tumblr">
            <span>tumblr</span>
        </a>
    </nav>

</section>
